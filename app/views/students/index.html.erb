<h1>Listing students</h1>

<table>
  <tr>
    <th class="col-md-1">Name</th>
    <th class="col-md-1">County</th>
    <th class="col-md-1">Email</th>
    <th class="col-md-2">Description</th>
    <th class="col-md-1">Can send email</th>
    <th class="col-md-1">Graduation year</th>
    <th class="col-md-1">Body temperature</th>
    <th class="col-md-1">Price</th>
    <th class="col-md-1">Birthday</th>
    <th class="col-md-1">Favorite time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td class="col-md-1"><%= student.name %></td>
    <td class="col-md-1"><%= student.county %></td>
    <td class="col-md-1"><%= student.email %></td>
    <td class="col-md-2"><%= student.description %></td>
    <td class="col-md-1"><%= student.can_send_email %></td>
    <td class="col-md-1"><%= student.graduation_year %></td>
    <td class="col-md-1"><%= student.body_temperature %></td>
    <td class="col-md-1"><%= student.price %></td>
    <td class="col-md-1"><%= student.birthday.strftime("%B %-d, %Y") %></td>
    <td class="col-md-1"><%= student.favorite_time.strftime("%I:%M %p") %></td>
    <td><%= link_to 'Show', student %></td>
    <td><%= link_to 'Edit', edit_student_path(student) %></td>
    <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

